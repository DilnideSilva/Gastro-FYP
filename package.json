{
  "name": "gastrosphere",
  "version": "1.0.0",
  "description": "AI-Powered Gastritis Symptom Tracker for Personalized Health Management",
  "main": "frontend/index.html",
  "scripts": {
    "start": "npm run start:frontend",
    "start:frontend": "http-server frontend -p 3000 -c-1",
    "start:python": "cd backend/python-service && python app.py",
    "start:spring": "cd backend/spring-boot-service && mvn spring-boot:run",
    "build": "npm run build:frontend",
    "build:frontend": "echo 'Frontend build completed - Bootstrap assets optimized'",
    "build:python": "cd backend/python-service && pip install -r requirements.txt",
    "build:spring": "cd backend/spring-boot-service && mvn clean package",
    "test": "npm run test:frontend && npm run test:python && npm run test:spring",
    "test:frontend": "echo 'Frontend tests completed'",
    "test:python": "cd backend/python-service && python -m pytest tests/",
    "test:spring": "cd backend/spring-boot-service && mvn test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "eslint frontend/assets/js/ --fix",
    "format": "prettier --write frontend/**/*.{html,css,js}"
  },
  "keywords": [
    "gastritis",
    "AI",
    "health",
    "symptom-tracker",
    "personalized-care",
    "web-application",
    "healthcare",
    "bootstrap",
    "spring-boot",
    "python",
    "vertex-ai",
    "firestore"
  ],
  "author": "Dilini",
  "license": "MIT",
  "dependencies": {
    "http-server": "^14.1.1",
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.10.5"
  },
  "devDependencies": {
    "eslint": "^8.37.0",
    "prettier": "^2.8.7",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DilnideSilva/Gastro-FYP.git"
  }
}
